{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": { "browser": true, "es2020": true },
  "plugins": ["prettier"],

  "extends": ["plugin:@typescript-eslint/recommended", "eslint-config-prettier", "prettier", "next/core-web-vitals"],
  "ignorePatterns": ["dist", ".eslintrc"],
  "rules": {
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-unused-vars": 0,
    "no-console": 0,
    "react/display-name": 0,
    "prettier/prettier": [
      2,
      {
        "arrowParens": "always",
        "semi": true,
        "trailingComma": "none",
        "tabWidth": 2,
        "endOfLine": "auto",
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 120,
        "jsxSingleQuote": true
      }
    ]
  }
}
